.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-film
        | Movies Now!
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title === 'Now Playing') ? 'active' : undefined)
          a(href='/movies') Now Playing
        li(class=(title === 'Search Movies') ? 'active' : undefined)
          a(href='/movies/search') Search Movies
        li(class=(title === 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact
